<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>
    <bindings>
      <netTcpBinding >
        <binding name="netTcpBindingconfig"
                 transferMode="Buffered"
                 maxBufferPoolSize="2147483647"
                 maxBufferSize="2147483647"
                 maxReceivedMessageSize="2147483647"
                 receiveTimeout="00:30:00"
                 sendTimeout="00:30:00" >
          <security mode="None"/>
        </binding>
      </netTcpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="duplexWcf" >
          <serviceMetadata />
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="duplexWcf" name="ChatServerModule.ServerOperatorService">
        <endpoint address="net.tcp://localhost:12005/ServerOperatorService"
          binding="netTcpBinding" bindingConfiguration="netTcpBindingconfig"
          contract="WCF.Interfaces.IServerOperator" />
      </service>
    </services>
  </system.serviceModel>
</configuration>