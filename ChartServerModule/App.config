<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>
    <bindings>
      <netTcpBinding >
        <binding transferMode="Buffered"
                 maxBufferPoolSize="2147483647"
                 maxBufferSize="2147483647"
                 maxReceivedMessageSize="2147483647"
                 receiveTimeout="00:30:00"
                 sendTimeout="00:30:00"
                 name="netTcpBindingconfig">
          <security mode="None"></security>
        </binding>
      </netTcpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="duplexWcf" >
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service name="ChartServerModule.ServerOperatorService"
               behaviorConfiguration="duplexWcf">
        <endpoint
          binding="netTcpBinding"
          address="net.tcp://127.0.0.1:12005/ServerOperatorService"
          bindingConfiguration="netTcpBindingconfig"
          contract="WCF.Interfaces.IServerOperator">          
        </endpoint>
      </service>
    </services>
  </system.serviceModel>
</configuration>